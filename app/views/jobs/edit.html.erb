<h1> Edit a job </h1>

<%= simple_form_for @job do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :location %>
<%= f.input :recruiting_number, :label => "Recruiting Number" %>
<%= f.input :wage_lower_bound, :label => "Wage Floor" %>
<%= f.input :wage_upper_bound, :label => "Salary Cap" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>

  <%= f.submit "Submit" %>
<% end %>
